@model List<OnlineShop.Models.CartItem>
@{ 
    var ListCoupon = (List<Model.EF.Coupon>)ViewBag.ListCoupon;
}
<div class="cart">
    <p>
        <a href="/gio-hang" title="đi đến giỏ hàng"><span>Giỏ hàng:</span></a>
        <div id="dd" class="wrapper-dropdown-2">
            @Model.Count sản phẩm
            <ul class="dropdown">
                @if (Model.Count == 0)
                {
                    <li>Bạn chưa bỏ sản phẩm nào vào giỏ</li>
                }
                else
                {
                    <li>Giỏ hàng có @Model.Count sản phẩm gồm:</li>
                    foreach (var item in Model)
                    {
                        <li> @item.Quantity x @item.Product.Name</li>
                    }
                }
                @if (ListCoupon.Count > 0)
                {
                    <li>Giỏ hàng có mã giảm giá:</li>
                    foreach (var item in ListCoupon)
                    {
                        <li> Tên: @item.Name, Mã: @item.Code, Giảm: @item.DiscountBy@(item.ByPercentage==true? "%":"vnđ")</li>
                    }
                }
            </ul>
        </div>
    </p>
</div>