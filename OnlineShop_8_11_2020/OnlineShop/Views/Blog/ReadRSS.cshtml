
@{
    //Fix cứng
    ViewBag.Title = "RSS";
    ViewBag.Keywords = "Đọc tin tức RSS";
    ViewBag.Description = "Danh sách RSS tốt nhất vũ trụ";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="content">
        <div>
            <h1>Nhập link trang để đọc tin tức RSS:</h1>
            @using (Html.BeginForm())
            {
                <input type="URL" name="url" placeholder="Nhập địa chỉ đọc RSS"
                       class="form-control" value="@ViewBag.URL" style="min-width:100%" />
                <br />
                <input type="submit" value="Đọc tin RSS" class="btn btn-danger" />
            }
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Link</th>
                        <th>Description</th>
                        <th>Publish Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.RSSFeed != null)
                    {
                        foreach (var item in ViewBag.RSSFeed)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td><a href="@item.Link">@item.Link</a></td>
                                <td>@item.Description</td>
                                <td>@item.PubDate</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
