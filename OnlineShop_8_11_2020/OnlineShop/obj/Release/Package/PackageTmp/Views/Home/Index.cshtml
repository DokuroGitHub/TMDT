
@{
    //Title+keywords+description lấy từ ViewBag trong controller;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<Model.EF.Slide>)ViewBag.Slides;
    var listNewProducts = (List<Model.EF.Product>)ViewBag.NewProducts;
    var listFeatureProducts = (List<Model.EF.Product>)ViewBag.ListFeatureProducts;
}

@section header_slide{
    <div class="header_slide">
        <!--header chứa danh mục sản phẩm-->
        <div class="header_bottom_left">
            <!--productcatagory.cshtml-->
            <div class="categories">
                @{ Html.RenderAction("ProductCategory", "Product");}
            </div>
        </div>
        <!--header chứa slides-->
        <div class="header_bottom_right">
            <div class="slider">
                <div id="slider">
                    <!--slides move-->
                    <div id="mover">
                        <!-- id = "slide-1" phải có -->
                        <div id="slide-1" class="slide">
                            <div class="slider-img">
                                <a href="@slides[0].Link"><img src="@slides[0].Image" alt="learn more" /></a>
                            </div>
                            <div class="slider-text">
                                <h1>Clearance<br><span>SALE</span></h1>
                                <h2>UPTo 20% OFF</h2>
                                <div class="features_list">
                                    <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                </div>
                                <a href="/them-gio-hang?productId=33&quantity=1" class="button">Shop Now</a>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <!--slide 1-->
                        <div class="slide">
                            <div class="slider-text">
                                <h1>Clearance<br><span>SALE</span></h1>
                                <h2>UPTo 40% OFF</h2>
                                <div class="features_list">
                                    <h4>Get to Know More About Our Memorable Services</h4>
                                </div>
                                <a href="/them-gio-hang?productId=34&quantity=1" class="button">Shop Now</a>
                            </div>
                            <div class="slider-img">
                                <a href="@slides[1].Link"><img src="@slides[1].Image" alt="learn more" /></a>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <!--slide 2-->
                        <div class="slide">
                            <div class="slider-img">
                                <a href="@slides[2].Link"><img src="@slides[2].Image" alt="learn more" /></a>
                            </div>
                            <div class="slider-text">
                                <h1>Clearance<br><span>SALE</span></h1>
                                <h2>UPTo 10% OFF</h2>
                                <div class="features_list">
                                    <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                </div>
                                <a href="/them-gio-hang?productId=35&quantity=1" class="button">Shop Now</a>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <!--clear để tránh chồng chất thành phần-->
        <div class="clear"></div>
    </div>
}

<div class="content">
    <!--header sản phẩm mới-->
    <div class="content_top">
        <div class="heading">
            <h3>Sản phẩm mới</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">Xem tất cả sản phẩm</a></p>
        </div>
        <!--clear để tránh chồng chất thành phần-->
        <div class="clear"></div>
    </div>
    <!--sản phẩm mới-->
    <div class="section group">
        @foreach (var item in listNewProducts)
        {
            var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img src="@item.Image" alt="" /></a>
                <h2>@item.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        @{
                            if (item.PromotionPrice != null)
                            {
                                if (item.Price != null)
                                {
                                    <p><span class="rupees"><s>@item.Price.Value.ToString("N0")<ins>đ</ins></s></span></p>
                                    <p><span class="rupees">@item.PromotionPrice.Value.ToString("N0")<ins>đ</ins></span></p>
                                }
                                else
                                {
                                    <p><span class="rupees">Liên hệ</span></p>
                                    <p><span class="rupees">@item.PromotionPrice.Value.ToString("N0")<ins>đ</ins></span></p>
                                }
                            }
                            else
                            {
                                <p><span class="rupees">@(item.Price.HasValue? item.Price.Value.ToString("N0") : "Liên hệ")<ins>đ</ins></span></p>
                            }
                        }
                    </div>
                    <div class="add-cart">
                        <h4><a href="/them-gio-hang?productId=@item.ID&quantity=1">Thêm vào giỏ</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
    <!--header sản phẩm feature-->
    <div class="content_bottom">
        <div class="heading">
            <h3>Sản phẩm hot</h3>
        </div>
        <div class="see">
            <p><a href="#">Xem tất cả sản phẩm</a></p>
        </div>
        <!--clear để tránh chồng chất thành phần-->
        <div class="clear"></div>
    </div>
    <!--sản phẩm feature-->
    <div class="section group">
        @foreach (var item in listFeatureProducts)
        {
            var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img src="@item.Image" alt="" /></a>
                <h2>@item.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        @{
                            if (item.PromotionPrice != null)
                            {
                                if (item.Price != null)
                                {
                                    <p><span class="rupees"><s>@item.Price.Value.ToString("N0")<ins>đ</ins></s></span></p>
                                    <p><span class="rupees">@item.PromotionPrice.Value.ToString("N0")<ins>đ</ins></span></p>
                                }
                                else
                                {
                                    <p><span class="rupees">Liên hệ</span></p>
                                    <p><span class="rupees">@item.PromotionPrice.Value.ToString("N0")<ins>đ</ins></span></p>
                                }
                            }
                            else
                            {
                                <p><span class="rupees">@(item.Price.HasValue? item.Price.Value.ToString("N0") : "Liên hệ")<ins>đ</ins></span></p>
                            }
                        }
                    </div>
                    <div class="add-cart">
                        <h4><a href="/them-gio-hang?productId=@item.ID&quantity=1">Thêm vào giỏ</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
</div>

